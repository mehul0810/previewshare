<?xml version="1.0"?>
<ruleset name="PreviewShare WPCS">
    <description>WordPress Coding Standards for PreviewShare plugin.</description>

    <!-- Use the installed WordPress Coding Standards to avoid vendor path issues -->
    <rule ref="WordPress" />

    <!-- Exclude vendor and build directories -->
    <file>src</file>
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>
</ruleset>
